<h1>All Blogs</h1>

<%= link_to "New Blog", new_blog_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td>
          <%= link_to "Show", blog_path(blog) %> |
          <%= link_to "Edit", edit_blog_path(blog) %> |
          <%= link_to "Delete", blog_path(blog), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
